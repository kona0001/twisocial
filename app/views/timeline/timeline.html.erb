<div id="modal-main">

  <div class="twitter-icon-block">
    <div id="pop-profile"><%= image_tag("#{@spamuser.icon_url}", class: "icon-circle icon-layout") %></div>
  </div>
  <div class="twitter-right-block">
    <div class="twitter-name-block">
      <span class = "twitter-name"><%= @spamuser.name %></span>
      <span class = "twitter-screenname">@<%= @spamuser.screenname %></span>
      <span class = "twitter-info"><%= @like_name %>がリツイート</span>
    </div>
    <div class = "twitter-text-block">
      <div class = "twitter-text"><%= @spam.text %></div>
    </div>
    <div class="twitter-bottom-block">
      <span class = "twitter-rt">RT: <%= @spam.fav %></span>
      <span class = "twitter-fav">いいね: <%= @spam.like %></span>
    </div>
  </div>



  <div id="profile-block">
    <div class="profile-icon-block"><%= image_tag("#{@spamuser.icon_url}", class: "icon-circle icon-layout") %></div>
    <div class="profile-name-block"><%= @spamuser.name %></div>
    <div class="profile-follow-block">Follow: <%= @spamuser.follow %></div>
    <div class="profile-follower-block">Follower: <%= @spamuser.follower %></div>
    <div class="profile-text-block"><%= @spamuser.description %></div>
  </div>
</div>
