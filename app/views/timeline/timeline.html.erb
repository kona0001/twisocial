<div class = "background">
<div class = "snslayout">
<div class = "home">
<div class = "icon-block">
   <%= image_tag("#{@user.profile_image_uri_https}", class: "icon-circle") %>
</div>
<div class = "home-block">
  <div class = "home-icon-block">
