<!DOCTYPE html>
<html>
  <head>
    <title>Twisocial</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'load' %>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'load' %>
  </head>

  <body>

    <header>
      <% if logged_in? %>
        <%= link_to 'Logout', '/signout' %>
      <% else %>
        <%= link_to 'Twitter Login', '/auth/twitter' %>
      <% end %>
    </header>
    <% if flash[:notice] %>
      <div class="notice">
        <%= flash[:notice]%>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
